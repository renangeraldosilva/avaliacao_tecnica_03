@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Bem vindo ao Banco de Ferro</h1>
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/css/img/emprestimo.jpg" alt="First slide" height="700">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/css/img/emprestimo2.jpg" alt="Second slide" height="700">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/css/img/emprestimo3.jpg" alt="Third slide" height="700">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
